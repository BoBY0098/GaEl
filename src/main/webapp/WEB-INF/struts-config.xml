<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>
    <form-beans>
        <form-bean name="calculatorForm" type="com.example.calculatoramirhosein.CalculatorForm"/>
    </form-beans>
    <action-mappings>
        <action path="/calculate" type="com.example.calculatoramirhosein.CalculatorAction" name="calculatorForm" scope="request" input="/jsp/index.jsp">
            <forward name="success" path="/jsp/result.jsp"/>
        </action>
    </action-mappings>
</struts-config>



